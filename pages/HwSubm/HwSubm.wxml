<!--pages/HwSubm.wxml-->

<view class='page_hd'>
  <view class="page_title">Assignment 1</view>
</view>

<view class="page__bd">
  <view class="weui-cells">
    <view class="weui-cell">
      <view class="weui-article">
        <view class="weui-article__p">
          <text>Name: Tony Wang
          Date: 

          </text>      
        </view>
      </view>
    </view>
    <view class="weui-cell">
      <input placeholder="Link to Baidu Cloud:"></input>
    </view>
  </view>
</view>

<view class="page__bd">
  <view class="weui-cells">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <view class="weui-uploader">
            <view class="weui-uploader__hd">
                <view class="weui-uploader__title">图片上传</view>
                <view class="weui-uploader__info">{{imageFiles.length}}/9</view>
            </view>
            <view class="weui-uploader__bd">
                <view class="weui-uploader__files" id="uploaderFiles">
                  <block wx:for-items="{{imageFiles}}" wx:key="{{index}}">
                      <view class="weui-uploader__file" bindtap="PreviewImage" id="{{item}}">
                          <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                      </view>
                  </block>
                <view class="weui-uploader__input-box">
                    <view class="weui-uploader__input" bindtap="Upload"></view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  <view class="weui-cells">
    <view class="weui-cell">
      <input placeholder='Enter Answer Here'></input>
    </view>
  </view>
  <button class="weui-btn" type="warn" bindtouchstart="StartRecord" bindtouchend="StopRecord">按住录音</button>
  <button class="weui-btn" type='primary'  bindtap="Submit">提交</button>
</view>