<!--pages/HwSubm.wxml-->

<view class='page_hd'>
  <view class="page_title">Assignment 1</view>
</view>

<view class="page__bd">
  <view class="weui-cells">
    <view class="weui-cell">
      <view class="weui-article">
        <view class="weui-article__p">
          <text>Name: Tony Wang
          Date: 

          <!--{{TODO: Bind with online Description}}-->
          </text>      
        </view>
      </view>
    </view>
    <view class="weui-cell">
      <input placeholder="Link to Baidu Cloud:"></input>
    </view>
  </view>
</view>

<view class="page__bd">
  <view class="weui-cells">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <view class="weui-uploader">
            <view class="weui-uploader__hd">
                <view class="weui-uploader__title">图片上传</view>
                <view class="weui-uploader__info">{{imageFiles.length}}/9</view>
            </view>
            <view class="weui-uploader__bd">
                <view class="weui-uploader__files" id="uploaderFiles">
                  <block wx:for-items="{{imageFiles}}" wx:key="{{index}}">
                      <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                          <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                      </view>
                  </block>
                <view class="weui-uploader__input-box">
                    <view class="weui-uploader__input" bindtap="upload"></view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <scroll-view>
      <view wx:if="{{recordFiles}}" class="common-list" style="margin-bottom:120rpx;">
      <block wx:key="{{recordFiles}}">
          <view class="board">
                        <view class="cell"  >
                            <view class="cell-bd" data-key="{{item.filePath}}" bindtap="playRecord" > 
                                <view  class="date">存储路径:{{item.filePath}}</view>
                                <view  class="date" >存储时间:{{item.createTime}}</view>
                                <view  class="date">音频大小:{{item.size}}KB</view>
                            </view>  
                  
                        </view>
              </view>
      </block>
      </view>
    </scroll-view>
  <view class="weui-cells">
    <view class="weui-cell">
      <input placeholder='Enter Answer Here'></input>
    </view>
  </view>
  <button class="weui-btn" type="warn" bindtouchstart="startRecord" bindtouchend="stopRecord">按住录音</button>
  <button class="weui-btn" type='primary'  bindtap="submit">提交</button>
</view>